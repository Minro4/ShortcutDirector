{
  "name": "electron-quick-start-typescript",
  "version": "1.0.0",
  "description": "A minimal Electron application written with Typescript",
  "scripts": {
    "build": "npm run build:schemas && tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/src/main.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "build:schemas": "ts-node scripts/buildSchemas.ts"
  },
  "repository": "https://github.com/electron/electron-quick-start-typescript",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.19.7",
    "@types/xml2js": "^0.4.7",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "electron": "^11.0.3",
    "eslint": "^7.3.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "chokidar": "^3.4.3",
    "glob": "^7.1.6",
    "node-powershell": "^4.0.0",
    "strip-json-comments": "^3.1.1",
    "xml2js": "^0.4.23"
  }
}
